<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/button_corner_radius"
    android:insetTop="@dimen/button_corner_radius"
    android:insetRight="@dimen/button_corner_radius"
    android:insetBottom="@dimen/button_corner_radius">
    <ripple android:color="?android:attr/colorControlHighlight">
        <item>
            <selector>
                <item android:state_enabled="false">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/button_corner_radius" />
                        <solid android:color="?attr/buttonPrimaryBackground" />
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/button_corner_radius" />
                        <solid android:color="?attr/buttonPrimaryBackground" />
                    </shape>
                </item>
            </selector>
        </item>
    </ripple>
</inset>